<defs>
  <filter id="bf-gauge-inset-shadow">
    <feOffset dx="0" dy="1"></feOffset>
    <feGaussianBlur result="offset-blur" stdDeviation="2"></feGaussianBlur>
    <feComposite operator="out" in="SourceGraphic" in2="offset-blur" result="inverse"></feComposite>
    <feFlood flood-color="black" flood-opacity="0.2" result="color"></feFlood>
    <feComposite operator="in" in="color" in2="inverse" result="shadow"></feComposite>
    <feComposite operator="over" in="shadow" in2="SourceGraphic"></feComposite>
  </filter>
</defs>
{{!--                       X, Y  X, Y  RX RY        X, Y   X, Y  RX RY        X, Y  --}}
<path fill="#ebebeb"   d="M20,56 L5,56 A40,40,0,0,1,85,56 L70,56 A25,25,0,0,0,20,56 Z" filter="url(#bf-gauge-inset-shadow)" />
<path fill="{{color}}" d="M20,56 L5,56 A40,40,0,0,1,{{ax}},{{ay}} L{{bx}},{{by}} A25,25,0,0,0,20,56 Z" />
<text x="45" y="11" text-anchor="middle" fill="#666" font-family="'Helvetica Neue', Helvetica, Arial" font-size="11">
  {{title}}
</text>
<text x="45" y="55" text-anchor="middle" fill="#444" font-family="'Helvetica Neue', Helvetica, Arial" font-size="16" font-weight="600">
  {{#if showPercent}}
    {{{percentage}}}
  {{else}}
    {{value}}
  {{/if}}
</text>
<text x="13" y="67" text-anchor="middle" fill="#ccc" font-family="''Helvetica Neue', Helvetica, Arial" font-size="8">
  {{min}}
</text>
<text x="77" y="67" text-anchor="middle" fill="#ccc" font-family="'Helvetica Neue', Helvetica, Arial" font-size="8">
  {{max}}
</text>
